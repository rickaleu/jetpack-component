<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.registration.ui.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/credentials_text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            tools:text="Ricardo, escolha seu usuário e senha"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/credentials_imput_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/credentials_edit_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="usuário" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/credentials_imput_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:textColorHint="@color/black">

            <EditText
                android:id="@+id/credentials_edit_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="senha" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/credentials_button_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@color/black"
            android:text="próximo" />

    </LinearLayout>

</FrameLayout>